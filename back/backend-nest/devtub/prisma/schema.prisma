generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model movie {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  category    String
  imageUrl    String
  movieUrl    String
  title       String
  year        String
  description String   @db.Text
}

model User {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  senha     String
  role      Role
  createdAt DateTime @default(now())
}
